<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Phil Vessey</Authors>
    <Copyright>Copyright © 2019 Phil Vessey and Contributors</Copyright>
    <Description>NextDepartures is a .NET Standard Library that queries GTFS (General Transit Feed Specification) data sets stored in an Azure SQL Database. The library will work with any well formed GTFS data set.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>NextDepartures.Standard</PackageId>
    <PackageLicense>MIT</PackageLicense>
    <PackageProjectUrl>http://nextdepartures.net</PackageProjectUrl>
    <Product>NextDepartures.Standard</Product>
    <RepositoryUrl>https://github.com/philvessey/NextDepartures</RepositoryUrl>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.1.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.6.1" />
    <PackageReference Include="TimeZoneConverter" Version="3.2.0" />
  </ItemGroup>

</Project>